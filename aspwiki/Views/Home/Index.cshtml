@{
    ViewData["Title"] = "Home";
}
@using ASPWiki.ViewModels;
@model HomeViewModel

<section>
    <div class="row">
        <div class="col-md-6">
        <h1>Latest</h1>
            @for (var i = 0; i < Model.LatestWikipages.Count; i++)
            {
                @Html.Partial("PageLink", Model.LatestWikipages[i]);
            }
        </div>

        <div class="col-md-6">
            <h1>Popular</h1>
            @for (var i = 0; i < Model.PopularWikipages.Count; i++)
            {
                @Html.Partial("PageLink", Model.PopularWikipages[i]);
            }
        </div>
    </div>
</section>

@section scripts{
<script src="~/js/prettify.js"></script>

<script>
$(document).ready(function () {
    $("pre > code").parent().addClass('prettyprint');
            prettyPrint();
        });
</script>
}