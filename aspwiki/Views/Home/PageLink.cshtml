@using ASPWiki.Model
@model WikiPage

<article class="row" style="margin:15px;word-break:break-all;">
    <div class="col-sm-12">
        <a href="/Wiki/View/@Model.Path"><h3>@Model.Title</h3></a>
    </div>

    <div class="col-sm-12">
        @Html.Raw(@Model.GetContentSummary())
    </div>

    <div class="col-sm-12">
        @Html.Partial("~/Views/Wiki/Label.cshtml", Model.label)
        <span>Written by: @(@Model.Author == null ? "Uknown" : @Model.Author) - Size: @Model.GetSizeKiloBytes() - @Html.DisplayFor(model => model.LastModified)</span>
        <span>@Model.Attachments.Count <i class="fa fa-paperclip" aria-hidden="true"></i></span>
    </div>
</article>